# Site settings
baseurl = ""
languageCode = "en"
languageName = "English"
title = "Your site title"
theme = "skald"
googleAnalytics = "Your Google Analytics ID"
defaultContentLanguage = "en"
disableKinds = ["taxonomy", "taxonomyTerm"]

[languages]

	[languages.en]
		contentDir = "content/en"
		languageName = "English"
		description = "Your site description"
		[[languages.en.menu.main]]
			identifier = "about"
			name = "About me"
			url = "/about/"

		[[languages.en.menu.main]]
			identifier = "blog"
			name = "Blog"
			url = "/posts/"

		[languages.en.params]
			bio = "Your biography"
			intro = "Your introduction"
			home = "Home"
			readMore = "Read also:"
			archive = "Latest posts"
			title404 = "404 - Page not found"
			subtitle404 = "The content you're looking for doesn't seem to exist."

[permalinks]
	posts = "posts/:year/:month/:slug/"

[params]
	author = "Your name"

	enableRSS = true
	enableSummary = true
	useDescriptionReplaceSummary = true
	enableGoogleAnalytics = true
	enableTwitterCard = true

	twitter = "Your Twitter URL"
	linkedin = "Your LinkedIn URL"

	# Add custom assets with their paths relative to the static folder
	customCSS = []
	customJS  = []

	# The variables below are optionally too and can be used to
	# translate or customize each string of the theme.

	olderPosts = ""
	newerPosts = ""
	copyright = ""

	# show latest posts in single page
	showLatestPosts = true

	# 404 page
	title404 = ""
	subtitle404 = ""